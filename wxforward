from wxpy import *

bot = Bot(cache_path = True)


listen_group = ensure_one(bot.groups().search('ğŸˆ²ç¦è¨€ä¸Šè½¦ç¾¤ğŸ±ğŸ±'))
listen_friend = ensure_one(listen_group.search('æ›¼å°¼'))
target_group = bot.groups().search('å•¦å•¦å•¦å•¦å•¦')[0]

print('ç›‘å¬çš„ç¾¤å’Œç”¨æˆ·åˆ†åˆ«ä¸ºï¼š%s,%s' %(listen_group,listen_friend))
print('ç›®æ ‡ç¾¤åˆ†åˆ«ä¸ºï¼š%s' %(target_group))

@bot.register(listen_group)
def group_msg(msg):
    ##print('aaaceæµ‹è¯•:%s,%s' %(msg,bot.self))
